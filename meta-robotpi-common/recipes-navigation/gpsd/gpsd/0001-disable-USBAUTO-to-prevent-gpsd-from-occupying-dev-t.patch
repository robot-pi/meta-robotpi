From 626469c6d426ef5edc37730a9b630a417f1b814c Mon Sep 17 00:00:00 2001
From: Weiheng Ni <weihengn@gmail.com>
Date: Mon, 26 Aug 2024 16:42:23 -0700
Subject: [PATCH] disable USBAUTO to prevent gpsd from occupying /dev/ttyUSBx

---
 packaging/deb/etc_default_gpsd    | 4 ++--
 packaging/deb/etc_default_gpsd.in | 4 ++--
 2 files changed, 4 insertions(+), 4 deletions(-)

diff --git a/packaging/deb/etc_default_gpsd b/packaging/deb/etc_default_gpsd
index a72fa69..3e78386 100644
--- a/packaging/deb/etc_default_gpsd
+++ b/packaging/deb/etc_default_gpsd
@@ -1,8 +1,8 @@
 # Default settings for gpsd.
 # Please do not edit this file directly - use `dpkg-reconfigure gpsd' to
 # change the options.
-START_DAEMON="true"
+START_DAEMON="false"
 GPSD_OPTIONS="-n"
 DEVICES=""
-USBAUTO="true"
+USBAUTO="false"
 GPSD_SOCKET="/run/gpsd.sock"
diff --git a/packaging/deb/etc_default_gpsd.in b/packaging/deb/etc_default_gpsd.in
index 4e30460..feba633 100644
--- a/packaging/deb/etc_default_gpsd.in
+++ b/packaging/deb/etc_default_gpsd.in
@@ -1,8 +1,8 @@
 # Default settings for gpsd.
 # Please do not edit this file directly - use `dpkg-reconfigure gpsd' to
 # change the options.
-START_DAEMON="true"
+START_DAEMON="false"
 GPSD_OPTIONS="-n"
 DEVICES=""
-USBAUTO="true"
+USBAUTO="false"
 GPSD_SOCKET="@RUNDIR@/gpsd.sock"
