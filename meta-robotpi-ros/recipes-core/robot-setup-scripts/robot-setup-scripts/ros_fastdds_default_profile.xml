<!--
    Access ros data in remote robot machine:
    1. put this file on dev machine and update ${ROS_REMOTE_ROBOT_IP} with robot
    machine ip address
    2. export FASTRTPS_DEFAULT_PROFILES_FILE=/path/to/ros_fastdds_default_profile.xml
    3. restart ros daemon on dev machine: ros2 daemon stop; ros2 daemon start
    4. dev machine shoule be able to access ros data on robot via ros2, rqt, rviz commands
 -->
<?xml version="1.0" encoding="UTF-8" ?>
<profiles xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
    <participant profile_name="initial_peers_profile" is_default_profile="true" >
        <rtps>
            <builtin>
                <initialPeersList>
                    <locator>
                        <udpv4>
                            <address>127.0.0.1</address>
                        </udpv4>
                        <udpv4>
                            <address>${ROS_REMOTE_ROBOT_IP}</address>
                        </udpv4>
                    </locator>
                </initialPeersList>
            </builtin>
        </rtps>
    </participant>
</profiles>
